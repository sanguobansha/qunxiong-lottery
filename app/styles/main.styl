// Apply a natural box layout model to all elements.
// http://paulirish.com/2012/box-sizing-border-box-ftw/
html
  box-sizing: border-box

*, *:before, *:after
  box-sizing: inherit

.app
  font-family: 'San Francisco', 'Avenir', 'Helvetica', sans-serif

.header
  width: 551px
  margin: 0 auto
  padding: 5px
  font-size: 24px
  background-color: #fff
  border-bottom: 2px solid #427684
  font-weight: 300
  font-size: 1.25rem
  line-height: 1.2

  ul
    margin: 5px 0
    text-align: center
    li
      a
        display: inline-block
        text-decoration: none
        color: #3f894a
        padding: 4px 15px

        &.last-link
          padding-left: 9px;

        &:visited
          color: #3f894a

        &:hover
          color: #27552e
          border-color: #27552e
  li
    display: inline

.home-page
  width: 551px
  height: 275px
  margin: 0 auto
  padding: 5px
  margin-bottom: 0.5em
  color: #fff
  background-color: #7fc4d6
  .icon-brunch-logo-napkin
    background-repeat: no-repeat
    width: 256px
    height: 256px
    margin: 0 auto
    transition: background-size 0.2s
    background-size: 100%
    background-image: url('http://brunch.io/images/svg/png/brunch-logo-napkin.png')

